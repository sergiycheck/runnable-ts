{
  "name": "runnable-ts-node",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register './**/*.test.ts' ",
    "exec": "ts-node --swc ./src/index.ts",
    "start-swc": "swc ./src/index.ts -w -d dist",
    "start-nodemon": "nodemon ./src/index.ts",
    "start-tsx": "tsx watch ./src/index.ts",
    "exec-tsx": "tsx ./src/index.ts",
    "exec-node": "node src/index.js"
  },
  "dependencies": {
    "nodemon": "^2.0.20",
    "tsx": "^3.12.7"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.57",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.1.3",
    "chai": "^4.3.6",
    "chokidar": "^3.5.3",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
